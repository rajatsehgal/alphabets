{
    "extends": [
        "eslint:recommended",
        "plugin:wc/best-practice",
        "airbnb-base"
    ],
    "plugins": ["wc"],
    "rules": {
        "wc/no-constructor-attributes": "off",
        "no-console": "off",
        "linebreak-style": "off",
        "no-param-reassign": "off",
        "import/extensions": "off",
        "no-underscore-dangle": "off",
        "no-trailing-spaces": "off",
        "comma-dangle": "off",
        "class-methods-use-this": [
            "error", {
                "exceptMethods": [
                    "render",
                    "contentTemplate"
                ]
        }]
    },
    "env": {"browser": true}
}